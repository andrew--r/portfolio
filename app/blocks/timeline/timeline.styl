.timeline
	margin 30px 0	
	container()
	

	&__list
		max-width 40rem
	

	&__item
		&:not(:first-child)
			margin-top $baseline
	

	&__title
		margin-bottom 1.3rem
		 
		font-size 1.3rem
		font-weight bold
		line-height 1
	

	&__date
		text-transform uppercase
		font-size 0.8rem
		letter-spacing .1em