// Regular
@font-face
	font-family "Garamond"
	src url('../fonts/original-garamond-bt/regular.woff2') format('woff2'),
			url('../fonts/original-garamond-bt/regular.woff') format('woff')
	font-style normal
	font-weight normal


// Italic
@font-face
	font-family "Garamond"
	src url('../fonts/original-garamond-bt/italic.woff2') format('woff2'),
			url('../fonts/original-garamond-bt/italic.woff') format('woff')
	font-style italic
	font-weight 400


// Bold
@font-face
	font-family "Garamond"
	src url('../fonts/original-garamond-bt/bold.woff2') format('woff2'),
			url('../fonts/original-garamond-bt/bold.woff') format('woff')
	font-style normal
	font-weight 700
