html, body
	height 100%


body
	// min-width $site-width
	padding-right 30px
	padding-left 96px + 90px
	
	font-size $font-size
	line-height $line-height
	font-family $font-family
	
	+below($desktop-cutoff)
		padding-left 30px
	
	+mobile()
		padding-left 15px
		padding-right 15px 


h1, h2, h3, h4, h5, h6, p, ul, ol, blockquote
	margin 0
	padding 0
 

a
	position relative
	
	text-decoration none
	
	link($links-color, $links-hover-color)
	transition all .2s ease
	
	&:hover
		transition none

.nobr
	white-space nowrap
